<image name="md_marquee">
<visible>true</visible>
<pos>0.500 1.100</pos>
<maxSize>0.119 0.119</maxSize>
<linearSmooth>true</linearSmooth>
<zIndex>295</zIndex>
<storyboard event="open">
<animation property="opacity" from="0" to="0" duration="250" mode="easeIn"/>
